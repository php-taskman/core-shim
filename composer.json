{
    "name": "php-taskman/core-shim",
    "description": "",
    "type": "library",
    "license": ["MIT"],
    "authors": [],
    "bin": [
        "taskman",
        "taskman.phar"
    ],
    "require": {
        "php": ">= 7.4",
        "ext-json": "*",
        "phptaskman/core": "dev-master"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "humbug/box": "^3.12.0",
        "jetbrains/phpstorm-stubs": "dev-master@dev"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "compile": [
            "composer install --working-dir='vendor/phptaskman/core' --no-scripts --no-plugins --no-dev --no-interaction --optimize-autoloader",
            "vendor/bin/box compile --working-dir='vendor/phptaskman/core'",
            "php -r \"copy('vendor/phptaskman/core/taskman.phar', 'taskman.phar');\"",
            "php -r \"file_put_contents('taskman.phar.sha1sum', hash_file('sha1', 'taskman.phar'));\""
        ]
    }
}
